<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Clientes</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body class="bg-secondary">
    <div class="container">
        <section class="d-flex justify-content-center mt-5 ">
            <h2><%= title %></h2>
        </section>

        <table class="table table-dark table-striped">
            <thead>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Telefono</th>
                <th>Correo</th>
                <th>Municipio</th>
                <th>Opciones</th>
            </thead>
            <tbody>
                <% clients.forEach(function(client){ %> 
                    <tr>
                        <td><%=client.Nombre%></td>
                        <td><%=client.Apellido%></td>
                        <td><%=client.Telefono%></td>
                        <td><%=client.Correo%></td>
                        <td><%=client.id_municipio%></td>
                        <td>
                            <a href="edit/<%= client.id_cliente%>" class="btn btn-sm btn-outline-primary">Editar</a>
                            <a href="delete/<%= client.id_cliente%>" class="btn btn-sm btn-outline-danger">Eliminar</a>
                        </td>

                    </tr>
                <% }); %>
            </tbody>
        </table>

        <div class="center">
            <a class="btn btn-sm btn-warning" href="municipio"><strong>Ver Municipios</strong> </a>
            <a class="btn btn-sm btn-info" href="regiClient"><strong>Agregar Nuevo Cliente</strong></a>
            
        </div>
        
    </div>
   
</body>
</html>